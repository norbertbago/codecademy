
# Manipulation

CREATE TABLE friends (
  id INTEGER,
  name TEXT,
  birthday DATE
);

INSERT INTO friends (id, name, birthday) VALUES (1,'Ororo Munroe', 1940);

INSERT INTO friends (id, name, birthday) VALUES (2,'Laura Siblings', 1945);

INSERT INTO friends (id, name, birthday) VALUES (3, 'Peter Pan', 1948);

UPDATE friends SET name = 'Ororo Storm' WHERE id = 1;

SELECT * FROM friends;
ALTER TABLE friends ADD COLUMN email TEXT;

UPDATE friends SET email='storm@codecademy.com' WHERE id = 1;
UPDATE friends SET email='siblings@codecademy.com' WHERE id = 2;
UPDATE friends SET email='pan@codeademy.com' WHERE id = 3;

SELECT * FROM friends;


